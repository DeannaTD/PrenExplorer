@model PrenExplorer.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Авторизация</title>
    <style>
        *{
            box-sizing: border-box;
        }

        body{
            background-image: url("/img/main.png");
            background-position: center;
            background-size: cover;
            overflow: hidden;
            height: 100vh;
        }

        .flex-container{
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-container{
            flex-direction: column;
            width: 40%;
        }

        form{
            width: 100%;
        }

        input{
            display: block;
        }

        input::placeholder{
            color: #fff;
        }

        .input-block{
            background-color: transparent !important;
            outline: none;
            border: none;
            width: 100%;

            padding: 1rem .5rem .5rem 1rem;
        }

        .input-container{
            border-bottom: 2px solid #fff;
        }

        input[type="submit"]{
            background-color: #800080;
            border: 1px solid #fff;
            border-radius: 5px;
            color: #fff;
            width: 100%;
            padding: .5rem;
            margin: 1rem 0;
        }

    </style>
</head>
<body class="flex-container">
    <div class="form-container flex-container">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="All"></div>
            <div class="input-container">
                <input asp-for="Login" type="text" placeholder="Имя"
                       class="input-block">
            </div>
            <div class="input-container">
                <input type="password" asp-for="Password" placeholder="Пароль"
                       class="input-block">
            </div>
            <input type="submit" class="input-submit" value="Войти">
        </form>
    </div>
</body>
</html>